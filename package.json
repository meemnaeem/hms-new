{
    "private": true,
    "scripts": {
        "build": "mix build",
        "build:css": "tailwindcss -i ./resources/sass/app.scss -o ./public/css/app.css -m",
        "dev:css": "tailwindcss -i ./resources/sass/app.scss -o ./public/css/app.css -w",
        "dev": "concurrently \"npm run dev:css\" \"mix dev\"",
        "dev:js": "tailwindcss -i ./resources/js/app.js -o ./public/js/app.js -w",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production"
    },
    "devDependencies": {
        "@inertiajs/inertia": "^0.11.0",
        "@inertiajs/inertia-vue3": "^0.6.0",
        "@inertiajs/progress": "^0.2.7",
        "@popperjs/core": "^2.11.6",
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/typography": "^0.5.2",
        "@vue/compiler-sfc": "^3.2.37",
        "autoprefixer": "^10.4.7",
        "axios": "^0.27",
        "bootstrap": "^5.2.3",
        "laravel-mix": "^6.0.49",
        "lodash": "^4.17.19",
        "postcss": "^8.4.14",
        "postcss-import": "^14.1.0",
        "resolve-url-loader": "^5.0.0",
        "tailwindcss": "^3.1.0",
        "vue": "^3.2.31",
        "vue-loader": "^17.0.0"
    },
    "dependencies": {
        "sass": "^1.56.1",
        "sass-loader": "^13.2.0"
    }
}
